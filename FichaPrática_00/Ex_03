# valores altura e perimetro
altura = float(input("A altura do retângulo é "))
if altura <= 0:
    print("A altura deve ser um número positivo.")
else:
    largura = float(input("O largura do retângulo é "))
if largura <= 0:
    print("A largura deve ser um número positivo.")
else:
    # resultado nas variaveis
    area = altura * largura
perimetro = 2 * (altura + largura)
# resultado na consola
print("A área do retângulo é ", area)
print("O perímetro do retângulo é ", perimetro)
